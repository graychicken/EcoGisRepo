/* Structure */
* {
    font-family: $font_family;
    font-size:$font_size;
}
body,
html {
    margin:0px;
    padding:0px;
    height: 100%;
}
body.border {
    padding:10px;
    margin:0px;
    height:auto;
}

.transparency90 {
    filter:alpha(opacity=90);
    opacity:.90; 
}

#R3WorkAreaAll {
    width:100%;
    min-height:100%;
    height:100%;
    margin:auto;
}

#R3WorkAreaHeader {
    position:absolute;
    z-index:1;
    height:70px;
    width:100%;
}
#R3WorkAreaHeader #Logos {
    height:50px;
    background-color:#ffffff;
}
#R3WorkAreaHeader #LogoSwSx {
    float:left;
    margin-top:5px;
    padding-left:10px;
}
#R3WorkAreaHeader #LogoSwDx {
    float:right;
    margin-top:5px;
    padding-right:10px;
}

#R3WorkAreaTitle {
    clear:both;
    background-color:$color;
    height:20px;
    color:#ffffff;
}
#R3WorkAreaTitle #SwTitle {
    float:left;
    padding:3px 3px 3px 8px;
}
#R3WorkAreaTitle #SwInvalidDate {
    padding:3px 3px 3px 0px;
    color:#AA0000;
}
#R3WorkAreaTitle #SwInvalidDate a {
    color:#AA0000;
}
#R3WorkAreaTitle #Logout {
    float:right;
    margin:3px;
}
#R3WorkAreaTitle #Logout a {
    text-decoration:none;
    text-transform:uppercase;
    color:#ffffff;
    margin-right:5px;
}
#R3WorkAreaTitle #Logout a:hover {
    color:#333333;
}
#R3WorkAreaTitle #Logout img {
    border:0px;
    vertical-align:text-bottom;
    margin-right:3px;
}

#R3WorkAreaWrapper {
    clear:both;
    background-color: #FFFFFF;
    width:100%;
    height:100%;
    xposition:relative;  /*  Questo tag fa casino con il cambio password obbligatorio in IE!  */

}
#R3WorkAreaWrapper .R3WorkAreaSpacer {
    height:70px;
}
#R3WorkAreaWrapper #R3WorkAreaMenu {
    width:200px;
    background:#e5e5e5;
    position:absolute;
    left:0;
    top:0;
    height:100%;
}
#R3WorkAreaMenuOff {
    position: absolute; 
    width: 20px; 
    height: 100%; 
    cursor: pointer;
    background-color:$color;
}
#R3WorkAreaWrapper #R3FrameworkMenuID {/* menu */
    overflow:auto;
    height:100px
}
#R3WorkAreaWrapper #right {
    margin-left:200px;
    height: 100%;
}
#R3FrameworkID {
    height:500px;
    width:100%;
}

#R3WorkAreaFooter {
    margin-top:5px;
    margin-bottom:2px;
    width:200px;
    text-align:center;
}
#R3WorkAreaFooter a {
    color:#666666;
    text-decoration:none;
}
#R3WorkAreaFooter a:hover {
    text-decoration:underline;
}

/* messages */
#R3WorkAreaMessage {
    background-color:#FFFFCC;
    border:1px solid #666666;
    padding:2px;
    text-align:center;
    width:100%;
    z-index:10;
    overflow:hidden;
    z-index: 10;
    position:absolute;
    font-weight: bold;
    filter:alpha(opacity=80);
    opacity:.80; 
}

#R3WorkAreaErrorMessage {
    background-color:#FF5555;
    border:1px solid #666666;
    padding:2px;
    text-align:center;
    width:100%;
    font-weight: bold;
    z-index:10;
    overflow:hidden;
    z-index: 10;
    position:absolute;
    filter:alpha(opacity=80);
    opacity:.80; 
}
.antivirus_msg {
    padding:10px;
    text-align:center;
}
.form_msg {
    background-color:#FFFFCC;
    border:1px solid #666666;
    padding:2px;
    margin-bottom:5px;
}

/* Extras */
#R3WorkAreaExtra {
    padding:2px;
    white-space:nowrap;
    overflow:hidden;
    margin:5px 3px 3px 3px;
    border: 1px solid #a0a0a0;
    -moz-border-radius: 4px;
    border-radius: 4px;
    background-color: #cccccc;

}
#R3WorkAreaExtra form {
    margin:0px;
    padding:0px;
}
#R3WorkAreaExtra label {
    float:left;
    width:65px;
    margin-top:2px;
}
#R3WorkAreaExtra select {
    width:120px;
    margin-bottom:3px;
}

#R3WorkAreaExtra input {
    width:120px;
    margin-bottom:3px;
    background-color:#cccccc;
    border: 0px;
    height: 15px;
}

/* Filters */
fieldset.filter,
fieldset.app_filter {
    margin:0px 0px 10px 0px;
    padding:5px;
    border:1px solid $bordercolor;
}
fieldset.filter legend,
fieldset.app_filter legend {
    color:$darkcolor;
    font-size:$font_size_big;
}
/* search form */
fieldset.filter .filter_fields div,
fieldset.app_filter .app_filter_fields div {
    float:left;
    white-space:nowrap;
    height:25px;
    margin-right:10px;
}

/* criteri  di ricerca */
#criteria {
    clear:both;
    margin-bottom:15px;
    border:1px solid $bordercolor;
    padding:5px;
}
#criteria span {
    margin-right:5px;
}
#criteria .title {
    color:$hovercolor;
}

/* Forms */
.table_form,
.app_table_form {
    border-collapse:collapse;
    border:1px solid #cccccc;
}
.table_form th,
.form th,
.app_table_form th {
    font-weight:normal;
    text-align:right;
    padding:2px;
}
.form td {
    white-space:nowrap;
}
.table_form td,
.app_table_form td {
    padding:2px;
}
.table_form .separator td,
.app_table_form .separator td {
    border-top:1px solid #cccccc;
    padding:0px;
}
.table_form .evidence td,
.table_form .evidence th {
    background-color:#f5f5f5;
}
.table_form .user_info td,
.table_form .user_info th {
    background-color:#e5e5e5;
}
.table_form .user_info input {
    background-color:#e5e5e5;
}
.table_form .openclose td,
.table_form .openclose th {
    background-color:#e5e5e5;
    cursor:pointer;
    padding:4px;
}
#cus_municipality {
    width:400px;
    float:left;
}
#cus_municipality span {
    white-space:nowrap;
}
.openclose {
    background-color:#e5e5e5;
    cursor:pointer;
    padding:4px;
}
.openclose a {
    color:#000000;
    text-decoration:none;
}
.openclose a:hover {
    color:$hovercolor;
    text-decoration:none;
}
.openclose a img {
    border:0px;
}
.message {
    background-color:#FFFFCC;
}

.align-2-cols {
    clear:both;
    width:810px;
    margin:15px 0px;
}
.align-2-cols div {
    position:relative;
}
.align-2-cols .sx {
    float:left;
}
.align-2-cols .dx {
    float:right;
}
.align-2-cols img {
    border:1px solid #cccccc;
}
.align-2-cols .loading {
    position:absolute;
    top:50%;
    left: 50%;
}

.clearer {
    clear:both;
}

