/* inputs */
input, select, textarea {
    font-family: $font_family;
    font-size:$font_size;
}
input[type=text] {
    border: 1px solid #A5ACB2;
}
.input_readonly,
.readonly,
.textarea_readonly {
    background-color:#DFDFDF;
    border: 1px solid #A5ACB2;
    color: #000000;
}
.textarea_readonly {
    padding:1px;
    white-space:pre-line;
}
.integer,.year {
    text-align: right;
}
.float {
    text-align: right;
}
.required {
}
.clickable_image {
    border: 1px solid #999999;
    cursor:pointer;
}

/* dynamic_form */
.dynamic_form fieldset {
    padding:5px;
    margin:5px 0px 5px 0px;
    border:1px solid $bordercolor;
}
.dynamic_form fieldset legend {
    color:$darkcolor;
    font-size:$font_size;
    cursor:default;
}
.dynamic_form div {
    float:left;
    white-space:nowrap;
    margin-right:10px;
    padding-bottom:2px;
}
.dynamic_form div.label {
    padding-top:7px;
    height:12px;
}
.dynamic_form hr,
.dynamic_form br {
    clear:both;
}
.dynamic_form hr {
    border-top: 1px dotted #666666;
    border-bottom-style: none;
    height: 1px;
}

/* photo */
.photo_gallery {
    float:left;
    position:relative;
    margin:0px 10px 10px 0px;
    border:1px solid;
    text-align:center;
}
.photo_gallery img {
    margin-top:10px;
    cursor:pointer;
}
.photo_gallery .edit_panel {
    position:absolute;
    bottom:0px;
    left:0px;
    padding:2px;
    background-color:#e5e5e5;
    cursor:default;
}
.photo_gallery .edit_panel img {
    margin:0px;
    vertical-align:text-bottom;
}

/* print table */
.print_table {
    border-collapse:collapse;
    width:100%;
    border:1px solid #000000;
}
.print_table td{
    border:1px dotted;
    padding:2px;
}
.print_table th{
    border:1px solid;
    padding:1px;
}

/* Page element */
h3 {
    font-size:$font_size_big;
    margin:0px 0px 15px 0px;
    padding:0px;
}
h4 {
    font-size:$font_size;
    margin:0px 0px 10px 0px;
    padding:0px;
}
form {
    margin:0px;
    padding:0px;
}
sub {
    font-size:$font_size_sub;
}
.ui-tabs li sub {
    position:absolute;
    bottom:4px;
}
.input_error {
    border:2px solid #cc0000;
}
.input_warning {
    background-color: #CCAAAA;
}

.error {
    color:#cc0000;
}

.log_debug {
    color:#0000cc;
}
.log_warning {
    color:#000000;
}
.log_error {
    color:#cc0000;
}

/* Alignment */
.function_list {
    float:right;
}
.function_list2 {
    position:absolute;
    right:14px;
    top:13px;
}
.function_list2 img {
    cursor:pointer;
}
.antivirus {
    position:absolute;
    right:15px;
    bottom:15px;
}

/* wait */
.waiting {
    position: absolute;
    top: 15px;
    right:10px;
    font-weight: bold;
}
.waiting_top {
    position: absolute;
    top: 10px;
    left:49%;
    font-weight: bold;
    z-index:100;
    background-color:#FFFFFF;
    padding: 5px 10px 5px 10px;
    border:1px solid #666666;
    filter:alpha(opacity=80);
    opacity:.80; 
    vertical-align: middle;
}

#timeMonitor {
    position: absolute;
    top: 10px;
    left:10px;
    width:200px;
    font-weight: bold;
    z-index:100;
    background-color:#FFFFFF;
    padding: 5px 10px 5px 10px;
    border:1px solid #666666;
    filter:alpha(opacity=80);
    opacity:.80; 
    display:none;
}
#calcMonitor {
    xposition: absolute;
    top: 10px;
    left:10px;
    width:400px;
    z-index:99;
    background-color:#FFFFFF;
    padding: 5px 10px 5px 10px;
    border:1px solid #666666;
    filter:alpha(opacity=80);
    opacity:.80; 
    display:none;
}

.rightSuggestion {
    position:absolute;
    right:10px;
    text-align:right;
}
.rightSuggestion a {
    color:#000000;
}
.rightSuggestion a img {
    border:0px;
    margin-left:3px;
}
.rightSuggestion .calcs {
    border:1px solid #666666;
    background-color:#ffffff;
    margin-top:2px;
    padding:3px;
    width:450px;
    z-index:9999;
}

.calcSuggestionWindow {
    position:absolute;
    right:0px;
    z-index:999;
    background-color:#cccccc;
    border:1px solid #000000;
}
.calcSuggestionWindowTitle {
    padding:3px;
}
.calcSuggestion {
    background-color:#ffffff;
    border-top:1px solid #000000;
    padding:3px;
    overflow:auto;
    height:500px;
}
#simulation_log ul {
  margin-top: 2px;
  padding-left: 20px;
}


.calcTable td {
    border-bottom: 1px dotted #a0a0a0;
    border-left: 1px dotted #a0a0a0;
    width: 80px;
    padding-left:2px;
    padding-right:2px;
}

.calcTable th {
    text-align: right;
    border-bottom: 1px dotted #a0a0a0;
    padding-right:2px;
}

.calcTable {
    border:1px solid #666666;
    border-collapse: collapse;
    width: 100%;
}

/* help */
.help {
    border-bottom: 1px dotted #999999;
}
.help:hover {
    border-bottom: 1px solid #999999;
    cursor: help;
}
.help_container {
    width: 300px; 
    border: 1px solid #A5ACB2;
    background: #FFFF99;
    right: 20px; top:10px; 
    position: fixed;
    z-index: 20000;
    color: #000000;
}
.help_container_title {
    font-weight: bold;
}
.info_container {
    border: 1px solid #A5ACB2;
    background: #FFFF99;
    color: #000000;
    margin-bottom: 15px;
    padding: 2px;
}

/* consumption_tree */
ul.consumption_tree, ul.consumption_tree ul { 
    list-style-type: none; 
    margin: 0px; 
    padding: 0px; 
}
ul.consumption_tree ul { 
    margin-left: 10px;
    padding:0px;
}
ul.consumption_tree li { 
    margin: 0px; 
    padding:0px;
    padding-top:5px;
}
ul.consumption_tree li li { 
    margin: 0px; 
    padding-left:12px; 
}
ul.consumption_tree_line, ul.consumption_tree_line ul { 
    background: url(../../../../images/vline.png) repeat-y;
}
ul.consumption_tree_line li { 
    background: url(../../../../images/node.png) no-repeat;

}
li.consumption_tree_last_line { 
    background: #FFFFFF url(../../../../images/lastnode.png) no-repeat;
}
/* Table grid */
.consumption_tree table,
.consumption_table {
    border-collapse: collapse;
    border: 1px solid #A5ACB2;
    cursor: default;
    table-layout:fixed;
    width:100%;
}
.actions,
.emissions {
    border-collapse: collapse;
    border: 1px solid #A5ACB2;
    cursor: default;
    margin-top:5px;
    width:100%;
}
.actions .no_border {
    border: 0px;
    background-color: #e6e6e6;
}

.consumption_tree th,
.consumption_table th,
.emissions th,
.actions th {
    background-color: #E6E6E6;
    padding: 2px;
    border: 1px dotted #A5ACB2;
    font-weight: normal;
    overflow:hidden;
}
.consumption_tree td,
.consumption_table td,
.emissions td,
.actions td {
    border: 1px dotted #A5ACB2;
    padding: 1px 4px 1px 3px;
    overflow:hidden;
}
.consumption_tree img,
.consumption_table img,
.emissions img,
.actions img {
    border: 0px;
}
.tr_hover{
    background-color: #CCCCCC !important;
}
.td_center  {
    text-align: center;
}
.td_right {
    text-align: right;
}

/*simulation summary*/
.simulation_summary {
    border-collapse: collapse;
    border: 1px solid #A5ACB2;
    cursor: default;
    margin-top:5px;
    table-layout:fixed;
}
.simulation_summary th {
    background-color: #E6E6E6;
    padding: 2px;
    border: 1px dotted #A5ACB2;
    font-weight: normal;
    overflow:hidden;
}
.simulation_summary td {
    border: 1px dotted #A5ACB2;
    padding: 1px 4px 1px 3px;
    overflow:hidden;
    text-align:right;
}


table.sensor_data {
    border-width: 1px;
    border-spacing: 2px;
    border-style: none;
    border-color: #CCCCCC;
    border-collapse: collapse;
    background-color: #FFFFFF;
}
table.sensor_data th {
    border-width: 1px;
    padding: 2px;
    border-style: inset;
    border-color: #CCCCCC;
    background-color: #FFFFFF;
}
table.sensor_data td {
    border-width: 1px;
    padding: 2px;
    border-style: inset;
    border-color: #CCCCCC;
    background-color: #FFFFFF;
}

table.factor_table {
    border: 1px solid #A5ACB2;
    border-collapse: collapse;
    cursor: default;
    margin-top:5px;
    margin-bottom:5px;
}

.factor_table th {
    background-color: #E6E6E6;
    padding: 2px;
    border: 1px solid #A5ACB2;
    font-weight: normal;
}

.factor_table td {
    padding: 2px;
    border: 1px dotted #A5ACB2;
    font-weight: normal;
    text-align: right;
}

/* legend */
#stats_legend {
    clear:both;
}
#stats_legend h4 {
    margin-bottom:5px;
    line-height:normal;
}
#stats_legend  .stats_legend_row {
    float:left;
    width:170px;
    margin-bottom:5px;
    overflow:hidden;
}
#stats_legend  .stats_legend_item {
    float:left;
    width:16px;
    height:12px;
    overflow:hidden;
    margin-right:2px;
}
#stats_legend  .stats_legend_item  div{
    width:0px;
    font-size:0px;
}

.production_row {
    background-color: #CCFF99;
}

.consumption_row {
    background-color: #FF6666;
}

.paes_catalog_selected_row {
    background-color: #CCFF99;
}

.selected_row {
    border: 1px solid #F18E1E;
    background-color: #FFFFCC;
}

.imported_row {
    font-style: italic;
}

/* map_container */
.image_container {
    border: 1px solid #CCCCCC;
    background-position: center;
    background-repeat: no-repeat;
}
.image_label {
    background-color: #CFCFCF;
    padding: 2px;
}

.goal_reached {
    color: #339933;
}

.goal_not_reached {
    color: #FF3333;
}

#btnTabsResize {
    -moz-border-radius: 3px; 
    border-radius: 3px; 
    position: absolute; 
    left: 10px; 
    top: 9px; 
    cursor: pointer; 
    border: 1px solid #aaa;
    width: 18px;
    height: 18px;
}

.simulation_waiting {
    position: absolute;
    top: 230px;
    left: 360px;
    font-weight: bold;
    z-index:100;
    background-color:#FFFFFF;
    padding: 5px 10px 5px 10px;
    border:1px solid #666666;
    filter:alpha(opacity=80);
    opacity:.80; 
    vertical-align: middle;
}